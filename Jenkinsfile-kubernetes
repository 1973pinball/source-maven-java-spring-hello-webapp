pipeline {
  agent {
    kubernetes {
      yamlFile 'pods.yaml'
    }
  }
  stages {
    stage('Checkout') {
      steps {
        container('maven') {
          git branch: 'main', url: 'https://github.com/1973pinball/source-maven-java-spring-hello-webapp.git'
        }
      }
    }
    stage('Build') {
      steps {
        container('maven') {
          sh 'mvn clean package -DskipTests=true'
        }
      }
    }
    stage('Test') {
      steps {
        container('maven') {
          sh 'mvn test'
        }
      }
    }
    stage('Build & Tag & Push Docker Image') {
      steps {
        container('kaniko') {
          sh 'executor --context=dir://$WORKSPACE \
                       --destination=1973pinball/myhello:$BUILD_NUMBER \
                       --destination=1973pinball/myhello:latest'
        }
      }
    }
  }
}
